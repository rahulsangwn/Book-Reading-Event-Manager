@model Project.BLL.UserModel.EventEntity

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="row">
    @*<h4>EventEntity</h4>
    <hr />*@
    <div class="col-sm-6">

        <div class="card">
            <div class="card-header text-center bg-primary text-white">
                @Html.DisplayFor(model => model.Title) (@Html.DisplayFor(model => model.Duration) Hours)
            </div>
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(model => model.Others)</h5>
                <p class="card-text text-center">- @Html.DisplayFor(model => model.Description)</p>
                <h6 class="card-text">
                    <div class="row">
                        <div class="col-9">
                            Organized By: @Html.DisplayFor(model => model.Email)
                        </div>
                        <div class="col-3 text-right">
                            <mark class="bg-info text-white">@Html.DisplayFor(model => model.Type)</mark> 
                        </div>
                    </div>
                </h6>
            </div>
            <div class="card-footer text-muted">
                <div class="row">
                    <div class="col-4">
                        <img style="opacity: 0.3;" src="~/Content/Icons/location.svg" />
                        @Html.DisplayFor(model => model.Location)
                    </div>
                    <div class="col-4 text-center">
                        #Invited Users: @Model.NoOfInvitedUsers
                    </div>
                    <div class="col-4 text-right">
                        <img style="opacity: 0.3;" src="~/Content/Icons/time.svg" />
                        @Model.StartTime.ToString().Remove(16)
                    </div>
                </div>
            </div>
        </div>

        <div class="">
            @if (User.Identity.Name == Model.Email && Model.StartTime > System.DateTime.Now)
            {
                <br />
                <hr />
                <div>
                    @using (Html.BeginForm("Invite", "Event", FormMethod.Post))
                    {
                        <div class="input-group">
                            @Html.Hidden("eventId", Model.EventId)
                            <input type="text" class="form-control" name="email" placeholder="Invite User/s" aria-label="Recipient's username" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary" type="submit">Invite</button>
                            </div>
                        </div>
                    }
                </div>
            }

        </div>
        <hr />
        <div>
            @using (Html.BeginForm("Comment", "Event", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="commentbox">Comment:</label>
                    <textarea class="form-control input-lg" id="commentbox" name="body"></textarea>
                    @Html.Hidden("eventId", Model.EventId)
                </div>

                <div class="form-group">
                    <div class="">
                        <input type="submit" value="Post Comment" class="btn btn-primary" />
                        @if (User.Identity.IsAuthenticated && User.Identity.Name == Model.Email && Model.StartTime > System.DateTime.Now)
                        {
                            <a href="@Url.Action("MyEvents", "Event")" style="" class="btn btn-outline-primary">Back To My Events</a>
                            <a href="@Url.Action("Edit", "Event", new { Id = Model.EventId })" class="btn btn-outline-primary">Edit this Event</a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-sm-6">
        @foreach (var comment in Model.Comments)
        {
            <div class="card border-dark">
                <div class="card-header">
                    <div class="row">
                        <div class="col-6">
                            @comment.Email
                        </div>
                        <div class="col-6 text-right">
                            @comment.CommentDate
                        </div>
                    </div>
                    
                </div>
                <div class="card-body">
                    <h5 class="card-title">@comment.Body</h5>
                </div>
            </div>
            <br />
        }

    </div>
</div>


